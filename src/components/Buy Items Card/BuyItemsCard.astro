---
import CldImage from "../../utils/CldImage.astro"
import buyItems from "../../lib/data/buyItems.json"

---
{
  buyItems.map((item) => {
    return (
      <div class="flex flex-col justify-center items-center">
        <div class="bg-tertiary-color rounded-xl p-1 text-center mb-3">
          <div class="w-24 h-24 p-2">
            <CldImage src={item.image} alt={item.name} width="148" height="145" class="w-20 h-20"/>
          </div>
          <h3 class="font-semibold text-sm tracking-wide text-black/55 text-center">
            {item.name}
          </h3>
        </div>
      </div>
    )
  })
}