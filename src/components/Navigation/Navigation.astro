---
import { Icon } from "astro-icon/components"

const logged = false

const loggedMenu = [{
  name: "Pantry",
  icon: "pantry",
  link: "/pantry/"
}, {
  name: "Recipies",
  icon: "recipies",
  link: "/recipies/"
}, {
  name: "Profile",
  icon: "profile",
  link: "/profile/"
}, {
  name: "Logout",
  icon: "logout",
  link: "/logout/"
}]

const notLoggedMenu = [{
  name: "Login",
  icon: "login",
  link: "/login/"
}]

---
{
  logged ? (
    loggedMenu.map((menuItem) => {
      return (
        <div class="flex justify-center items-center hover:bg-primary-color hover:rounded-md">
          <Icon
            name={menuItem.icon}
            class="size-6" />
          <a
            tabindex="-1"
            class="dropdown-item text-sm hover:bg-primary-color"
            href={menuItem.link}>{menuItem.name}</a>
        </div>
        )
    })
    ) : (
    notLoggedMenu.map((menuItem) => {
      return (
        <div class="flex justify-center items-center hover:bg-primary-color hover:rounded-md">
          <Icon
            name={menuItem.icon}
            class="size-6" />
          <a
            class="dropdown-item text-sm hover:bg-primary-color"
            href={menuItem.link}>
            {menuItem.name}
          </a>
        </div>
        )
      })
    )
}